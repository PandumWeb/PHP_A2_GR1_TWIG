{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} -My articles
{% endblock %}
 {% block content %}

    {% for article in articles %}
        {% if 0 == i%3 %}
        <div class="row">
            <article class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <header>
                    <h1><a href="article.php?id={{ article.id }}">{{ article.title }}</a></h1>
                    <img src= "{{ article.image}}" alt="{{ article.title }}">
                    <p>Written by {{ article.user_id }} on {{ article.created_at }}.</p>

                </header>
                <div class="content">
                    <p>{{ article.content }}</p>
                </div>
                <footer>
                    <p>Posted in category:<a href="{{ article.category_id }}"></a>{{ article.category_id }}</p>
                    <p><a href="/tag?id={{ article.category_id }}"><span class="label label-primary">Primary</span></a></p>
                </footer>
            </article>

            {% if 2 == i%3 %}
        </div>
            {% set i = i+1 %}
            {% endif %}
        {% endif %}
    {% endfor %}


     <div class="col-md-6">
         <ul class="pagination">
             <li {% if 1 == currentPage %} class="disabled" {% endif %} ><a href="index.php?p={{ currentPage-1 }}">&leftarrow;</a></li>
             {% set i = 1 %}
             {% for i in 1..nbPages+1 %}
                 <li {% if i == currentPage %}class="active" {% endif %}><a href="index.php?p={{ i }}">{{  i }}</a></li>
                 {% set i = i+1 %}
             {% endfor %}
             <li {% if currentPage == lastPage+1 %}class="disabled"{% endif %}><a href="index.php?p={{ currentPage+1 }}">&rightarrow;</a></li>
         </ul>
     </div>


 {% endblock %}

