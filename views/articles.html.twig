{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }} -My articles
{% endblock %}
 {% block content %}

    {% for article in articles %}

        <div class="row">
            <article class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <header>
                    <h1><a href="article.php?id={{ article.id }}">{{ article.title }}</a></h1>
                    <img src= "{{ article.image}}" alt="{{ article.title }}">
                    <p>Written by {{ article.user_id }} on {{ article.created_at }}.</p>

                </header>
                <div class="content">
                    <p>{{ article.content }}</p>
                </div>
                <footer>
                    <p>Posted in category:<a href="{{ article.category_id }}"></a>{{ article.category_id }}</p>
                    <p><a href="/tag?id={{ article.category_id }}"><span class="label label-primary">Primary</span></a></p>
                </footer>
            </article>
        </div>

    {% endfor %}
     <ul class="pagination">
         <li {{ 1 == currentPage }}  'class="disabled"' {{ var is null }}><a href="index.php?p={{ currentPage-1 }}">&leftarrow;</a></li>
        i = 1
         <?php while ($i <= $nbPages) { ?>
         <li <?php echo $i == $currentPage ? 'class="active"' : null; ?>><a href="index.php?p=<?php echo $i; ?>"><?php echo $i; ?></a></li>
         <?php $i++; ?>
         <?php } ?>

         <li <?php echo $nbPages == $currentPage ? 'class="disabled"' : null; ?>><a href="index.php?p=<?php echo $currentPage+1; ?>">&rightarrow;</a></li>
     </ul>
     </ul>

 {% endblock %}


